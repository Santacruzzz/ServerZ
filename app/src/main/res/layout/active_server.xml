<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1423"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/serverName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#F4F5F9"
        android:textSize="20sp" />

    <TableLayout
        android:stretchColumns="*"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:layout_width="match_parent">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/amountOfPlayers"
                    android:gravity="center"
                    android:textColor="#FEFEFE"
                    android:textSize="25sp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/dayDuration"
                    android:gravity="center"
                    android:textColor="#FEFEFE"
                    android:textSize="25sp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/nightDuration"
                    android:gravity="center"
                    android:textColor="#FEFEFE"
                    android:textSize="25sp"
                    android:layout_weight="1" />

            </TableLayout>

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/serverTime"
                    android:gravity="center"
                    android:textColor="#FEFEFE"
                    android:textSize="40sp"
                    android:layout_weight="2" />
                <TextView
                    android:id="@+id/durationTillSunriseOrSunset"
                    android:gravity="center"
                    android:textColor="#FEFEFE"
                    android:textSize="25sp"
                    android:layout_weight="1" />

            </TableLayout>

        </TableRow>

    </TableLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="#0D1423"
        android:progressTint="#135070"
        android:max="100" />

    <TextView
        android:id="@+id/players"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0D1423"
        android:gravity="center"
        android:text="@string/players"
        android:textAlignment="center"
        android:textColor="#FEFEFE"
        android:textSize="18sp"/>

    <ListView
        android:id="@+id/listOfPlayers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#0D1423"
        android:visibility="visible">

    </ListView>

</LinearLayout>