<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/border_right"
        android:paddingEnd="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server name"
            android:paddingStart="5dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Server map"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123.123.123.123:33333"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/gray"
                android:textSize="15dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:minWidth="105dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playersNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="12/55"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            tools:ignore="RtlHardcoded"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/baseline_person_24"/>

        <TextView
            android:id="@+id/serverTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:drawableLeft="@drawable/baseline_access_time_24"
            android:drawablePadding="15dp"
            android:text="00"
            android:textColor="#FEFEFE"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/isFirstPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:drawableLeft="@drawable/baseline_camera_alt_24"
            android:drawablePadding="15dp"
            android:text="00"
            android:textColor="#FEFEFE"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
